                        <para>Show all the routes configured</para>
                        <programlisting>m3ua route show</programlisting>

                        <example>
                                <title>Show Route</title>
                                <screen>
restcomm(local)>m3ua route show

2:-1:-1        AS1,AS2,
                                </screen>
                        </example>
                </section>
                                
        </section>              
