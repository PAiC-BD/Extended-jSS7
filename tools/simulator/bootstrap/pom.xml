<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>

	<parent>
		<artifactId>simulator-parent</artifactId>
		<groupId>org.restcomm.protocols.ss7.tools.simulator</groupId>
		<version>8.0.0-170</version>
	</parent>

	<artifactId>simulator-bootstrap</artifactId>
	<name>Restcomm jSS7 Simulator :: Simulator Bootstrap</name>

	<dependencies>
		<dependency>
			<groupId>org.restcomm.protocols.ss7.tools.simulator</groupId>
			<artifactId>simulator-core</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.restcomm.protocols.ss7.tools.simulator</groupId>
			<artifactId>simulator-gui</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>urbanophile</groupId>
			<artifactId>java-getopt</artifactId>
			<version>1.0.9</version>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

		<dependency>
			<groupId>com.sun.jdmk</groupId>
			<artifactId>jmxtools</artifactId>
			<version>1.2.1</version>
		</dependency>

		<dependency>
			<groupId>org.restcomm.protocols.ss7.ss7ext</groupId>
			<artifactId>ss7-ext-api</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<!-- -->
	<build>
		<finalName>run</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/descriptor.xml</descriptor>
					</descriptors>
					<finalName>simulator</finalName>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>directory-inline</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
